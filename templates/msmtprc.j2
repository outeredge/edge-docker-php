defaults
{% if SMTP_PASS is defined and SMTP_PASS %}
auth            on
{% endif %}

{% if '25' not in SMTP_PORT %}
tls             on
{% endif %}
{% if SMTP_PORT == '587' %}
tls_starttls    on
{% endif %}
{% if SMTP_CHECK_CERTS is defined and SMTP_CHECK_CERTS == 'Off' %}
tls_certcheck   off
{% else %}
tls_trust_file  /etc/ssl/certs/ca-certificates.crt
{% endif %}

{% if SMTP_HOST %}
account         default
host            {{ SMTP_HOST }}
port            {{ SMTP_PORT }}
user            {{ SMTP_USER }}
password        {{ SMTP_PASS }}
{% endif %}
{% if SMTP_FROM is defined and SMTP_FROM %}
from            {{ SMTP_FROM }}
{% else %}
from            {{ SMTP_USER }}
{% endif %}
